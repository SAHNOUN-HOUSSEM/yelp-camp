<% layout("layouts/boilerplate") %>
<h1><%= campground.title %></h1>
<form action="/campgrounds/<%= campground._id %>/images?_method=PUT" method="post" enctype="multipart/form-data" class="mt-3 mb-5">
    <div class="custom-file form-group">
        <h6>Add images</h6>
        <input class="custom-file-input form-control" type="file" id="formFileMultiple" name="images" multiple>
        <label for="image" class="custom-file-label form-label"></label>
    </div>
    <div class="row">
        <% campground.images.forEach((image, i)=>{ %>
            <div class="m-3 col-3">
                <div class="row">
                    <img src="<%= image.url %>" alt="" class="img-thumbnail" style="width: 500px;">
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="<%= image.filename %>" name="deleteImages" id="image-<%= i %>">
                    <label class="form-check-label" for="image-<%= i %>">
                        Remove image
                    </label>
                </div>
            </div>
        <% }) %>
    </div>
    <button class="btn btn-primary">Update images</button>
</form>