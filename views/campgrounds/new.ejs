<% layout("layouts/boilerplate") %>
<form action="/campgrounds" method="POST" class="row g-3 needs-validation" novalidate enctype="multipart/form-data">
    <div class="form-group">
        <label for="title">Title</label>
        <input type="text" class="form-control" id="title" name="campground[title]"  required>
    </div>
    <div class="form-group">
        <label for="location">Location</label>
        <input type="text" class="form-control" id="location" name="campground[location]" required>
    </div>
    <div class="custom-file form-group">
        <input class="custom-file-input form-control" type="file" id="formFileMultiple" name="images" required multiple>
        <label for="formFileMultiple" class="custom-file-label form-label"></label>
    </div>
    <div class="form-group">
        <label for="description">Description</label>
        <textarea name="campground[description]" id="description" class="form-control" cols="30" rows="3" required></textarea>
    </div>
    <div class="form-row">
        <div class="form-group">
            <label for="price">Price</label>
            <div class="input-group mb-2">
                <div class="input-group-prepend">
                    <span class="input-group-text">$</span>
                </div>
                <input type="text" class="form-control" id="price" name="campground[price]" required>
            </div>
        </div>
    </div>
    <div class="form-row mb-2">
        <div class="col-3">
            <button type="submit" class="btn btn-primary mt-3">
                Add campground
            </button>
        </div>
    </div>
</form>

<a href="/campgrounds" class="mt-5">
    All campgrounds
</a>