<div class="d-flex justify-content-center">
    <ul class="pagination">
        <% if (currentPage>1) { %>
            <li class="page-item">
                <a class="page-link" href="/campgrounds?page=<%= currentPage-1 %>&limit=<%= limit %>&search=<%= search %>&sort=<%= sort %>&sortDir=<%= sort ? sortDir : null %>">
                    Previous
                </a>
            </li>
        <% } %>
        <% if (startPage>1) { %>
            <li class="page-item">
                <a class="page-link" href="/campgrounds?page=1&limit=<%= limit %>&search=<%= search %>&sort=<%= sort %>&sortDir=<%= sort ? sortDir : null %>">
                    1
                </a>
            </li>
            <% if (startPage>2) { %>
                <li class="page-item disabled">
                    <a class="page-link">
                        ...
                    </a>
                </li>
            <% } %>
        <% } %>
        <% for( let i=startPage; i <=endPage; i++ ) { %>
            <li class="page-item <%= i===currentPage ? " active" : " " %>">
                <a class="page-link" href="/campgrounds?page=<%= i %>&limit=<%= limit %>&search=<%= search %>&sort=<%= sort %>&sortDir=<%= sort ? sortDir : null %>">
                    <%= i %>
                </a>
            </li>
        <% } %>
        <% if (totalPages>endPage) { %>
            <% if (endPage<totalPages-1) { %>
                <li class="page-item disabled">
                    <a class="page-link">
                        ...
                    </a>
                </li>
            <% } %>
            <li class="page-item">
                <a class="page-link"
                    href="/campgrounds?page=<%= totalPages %>&limit=<%= limit %>&search=<%= search %>&sort=<%= sort %>&sortDir=<%= sort ? sortDir : null %>">
                    <%= totalPages %>
                </a>
            </li>
        <% } %>
        <% if (currentPage<totalPages) { %>
            <li class="page-item">
                <a class="page-link"
                    href="/campgrounds?page=<%= currentPage+1 %>&limit=<%= limit %>&search=<%= search %>&sort=<%= sort %>&sortDir=<%= sort ? sortDir : null %>">
                    Next
                </a>
            </li>
        <% } %>
    </ul>
</div>